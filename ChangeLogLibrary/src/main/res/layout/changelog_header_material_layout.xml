<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chg_rowheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/chglib_material_minHeight"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/chglib_material_keyline1"
    android:paddingTop="40dp"
    android:paddingRight="@dimen/chglib_material_keyline1">

    <!-- ChangeLog Header [Version] You have to use the id="chg_headerVersion" -->
    <TextView
        android:id="@+id/chg_headerVersion"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingTop="@dimen/chglib_material_keyline1"
        android:paddingBottom="@dimen/chglib_material_keyline1"
        android:textAllCaps="false"
        android:textColor="@color/chglib_version_text_color"
        android:textSize="@dimen/chglib_material_list_header_fontsize"
        android:textStyle="bold"
        app:fontFamily="@string/font_fontFamily_material_item"
        tools:text="v1.5" />

    <!-- ChangeLog Header [Date] You have to use the id="chg_headerDate" -->
    <TextView
        android:id="@+id/chg_headerDate"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/chglib_material_keyline1"
        android:paddingBottom="@dimen/chglib_material_keyline1"
        android:textColor="@color/chglib_material_date_text_color"
        android:textSize="@dimen/chglib_material_list_header_date_fontsize"
        android:textStyle="bold"
        app:fontFamily="@string/font_fontFamily_material_item"
        tools:text="JUNE 17,2013" />

</LinearLayout>